{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"skipLibCheck": true,
		"module": "CommonJS",
		"noImplicitAny": true,
		"resolveJsonModule": true,
        "moduleDetection": "force",
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"noUnusedLocals": true,
		"lib": [ "ES2022" ]
	},
	"include": [
		"solutions/**/*.ts"
	]
}